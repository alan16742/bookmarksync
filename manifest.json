{
  "manifest_version": 3,
  "name": "WebDAV书签同步",
  "description": "一个简单的 Chrome 扩展，用于通过 WebDAV 在不同设备间同步浏览器书签。",
  "short_name": "WebDAV书签同步",
  "version": "1.0.1",
  "homepage_url": "https://github.com/nexply/bookmarksync",
  "permissions": [
    "bookmarks",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}